print("Calculator for Voltage Divider Bias Configuration")
r1=input("What is the value of R1? ")
r2=input("What is the value of R2? ")
vcc=input("What is the value of Collector Voltage? ")
Rth=(float(r1)*float(r2))/(float(r1)+float(r2))
Vth=(float(vcc)*float(r2))/(float(r1)+float(r2))
print("1.Base-Current\n2.Voltage Thevenin\n3.Resistance Thevenin\n4.Forward-Gain\n5.Emitter-Resistance\n6.Collector-Emitter Voltage\n7.Emitter-Current\n8.Collector-Resistance\n9.Emitter-Current.")
a=input("What value do you wish to calculate from the Above options(Serial Number)?\n")
if a== "1":
  B=input("What is the value of Forward Gain? ")
  re=input("What is the value of Emitter Resistance? ")
  i=(float(Vth)-0.7)/float(Rth)+((float(B)+1)*float(re))
  print("The Base Current is" + " " + str(i) + " " + "Amperes.")
elif a== "2":
  print("The Voltage Thevenin is" + " " + str(Vth) + " " + "Volts.")
elif a== "3":
  print("The Resistance Thevenin is" + " " + str(Rth) + " " + "Ohms.")
elif a== "4":
  ib=input("What is the value of Base Current? ")
  re=input("What is the value of Emitter Resistance? ")
  B=(((float(Vth)-0.7)/float(ib))-(float(Rth)))/float(re)
  b=(float(B-1))
  print("The Forward Gain is" + " " + str(b))
elif a== "5":
  ib=input("What is the value of Base Current? ")
  b=input("What is the value of Forward Gain? ")
  re=(((float(Vth)-0.7)/float(ib))-(float(Rth)))/(float(b)+1)
  print("The Emitter Resistance is" + " " + str(re) + " " + "Ohms.")
elif a== "6":
  vcc=input("What is the value of Collector Voltage? ")
  rc=input("What is the value of Collector Resistance? ")
  re=input("What is the value of Emitter Resistance? ")
  ic=input("What is the value of Collector Current? ")
  v=(float(vcc)-(float(ic)*(float(rc)+float(re))))
  print("The Collector Emitter Voltage is" + " " + str(v) + " " + "Volts.") 
elif a== "7":
  vcc=input("What is the value of Collector Voltage? ")
  vce=input("What is the value of Collector Emitter Voltage? ")
  rc=input("What is the value of Collector Resistance? ")
  re=input("What is the value of Emitter Resistance? ")
  i=(float(vcc)-float(vce))/(float(rc)+float(re))
  print("The Collector Current is" + " " + str(i) + " " + "Amperes.")
elif a== "8":
  vcc=input("What is the value of Collector Voltage? ")
  vce=input("What is the value of Collector Emitter Voltage? ")
  ic=input("What is the value of Collector Resistance Current? ")
  re=input("What is the value of Emitter Resistance? ")
  rc=((float(vcc)-float(vce))/float(ic))-float(re)
  print("The Collector Resistance is" + " " + str(rc) + " " + "Ohms.")
elif a== "9" :
  b=input("What is the value of Forward Gain? ")
  ib=input("What is the value of Base Current? ")
  ie=(float(b)+1)*float(ib)
  print("The Emitter Current is" + " " + str(ie) + " " + "Amperes.")

print("Calculator For Depletion Type MOSFET Voltage Divider Configuration")
print("1.Gate-Voltage\n2.Drain-Voltage\n3.Gate Source-Voltage\n4.Source-Current\n5.Source-Resistance\n6.Drain Supply-Voltage\n7.Drain Current\n8.Drain Resistance")
a=input("What value do you wish to calculate from the Above options(Serial Number)? ")
if a== "1":
  r1=input("What is the value of R1? ")
  r2=input("What is the value of R2? ")
  vdd=input("What is the value of Drain Voltage? ")
  Rth=(float(r1)*float(r2))/(float(r1)+float(r2))
  vg=float(Rth)*float(vdd)
  print("The value of Gate Voltage is" + " " + str(vg) + " " + "Volts")
elif a== "2" :
  r1=input("What is the value of R1? ")
  r2=input("What is the value of R2? ")
  vg=input("What is the value of Gate Voltage? ")
  Rth=(float(r1)*float(r2))/(float(r1)+float(r2))
  vdd=float(vg)/float(Rth)
  print("The value of Drain Voltage is" + " " + str(vdd) + " " + "Volts")
elif a== "3" :
  Is=input("What is the value of Source Current? ")
  Rs=input("What is the value of Source Resistance? ")
  vg=input("What is the value of Gate Voltage? ")
  vgs=float(vg)-(float(Is)*float(Rs))
  print("The value of Gate Source Voltage is" + " " + str(vgs) + " " + " Volts")
elif a== "4" :
  vgs=input("What is the value of Gate Source Voltage? ")
  Rs=input("What is the value of Source Resistance? ")
  vg=input("What is the value of Gate Voltage? ")
  Is=(float(vg)-float(vgs))/float(Rs)
  print("The value of Source Current is" + " " + str(Is) + " " + "Amperes")
elif a== "5" :
  vgs=input("What is the value of Gate Source Voltage? ")
  Is=input("What is the value of Source Current? ")
  vg=input("What is the value of Gate Voltage? ")
  rs=(float(vg)-float(vgs))/float(Is)
  print("The value of Source Resistance is" + " " + str(rs) + " " + "Ohms")
elif a== "6" :
  vdd=input("What is the value of Drain Voltage? ")
  id=input("What is the value of Drain Current? ")
  rd=input("What is the value of Drain Resistance? ")
  rs=input("What is the value of Drain Resistance? ")
  vds=float(vdd)-(float(id)*(float(rd)+float(rs)))
  print("The value of Drain Supply Voltage is" + " " + str(vds) + " " + "Volts")
elif a== "7" :
  vdd=input("What is the value of Drain Voltage? ")
  vds=input("What is the value of Drain Source Voltage? ")
  rd=input("What is the value of Drain Resistance? ")
  rs=input("What is the value of Drain Resistance? ")
  id=(float(vdd)-float(vds))/(float(rd)+float(rs))
  print("The value of Drain Current is" + " " + str(id) + " " + "Amperes")
elif a== "8" : 
  vdd=input("What is the value of Drain Voltage? ")
  vds=input("What is the value of Drain Source Voltage? ")
  id=input("What is the value of Drain Current? ")
  rs=input("What is the value of Source Resistance? ")
  rd=((float(vdd)-float(vds))/float(id))-float(rs)
  print("The value of Drain Resistance is" + " " + str(rd) + " " + "Ohms")
